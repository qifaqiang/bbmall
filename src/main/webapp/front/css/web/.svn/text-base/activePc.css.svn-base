@charset "utf-8";
#allsort{
     display: none;
}
.firstAllW:hover #allsort{
    display: block;
}
.activeProListWrap{
    padding: 20px 21px;
    float: left;

}
.activeProDetails{
    width: 208px;
    border: 1px solid #e5e5e5;
    padding: 20px;
    box-shadow: 0 0 20px #e5e5e5;
}
.posRelaivenone {
    position: relative;
    /*overflow: hidden;*/
    float: left;
}

.noneProing {
    position: absolute;
    bottom: 0;
    left: 20%;
    width: 80%;
}

.noneProing img {
    width: 100%;
}
.activeProListWrap .zoomImg{
    -moz-transition: transform 0.3s;
    -webkit-transition: transform 0.3s;
    -o-transition: transform 0.3s;
    transition: transform 0.3s;
    width: 100%;
    height: 100%;

}
.activeProListWrap .posRelaivenone{
    width: 208px;
    height: 208px;
    overflow: hidden;
}

.activeProListWrap:hover .zoomImg{
    -moz-transform: scale(1.1);
    -webkit-transform: scale(1.1);
    -ms-transform: scale(1);
    -o-transform: scale(1.1);
    transform: scale(1.1);

}
.leftSideWord{
    padding: 12px 0;
}
.activeProListWrap:hover .leftSideWord .activeproName{
    color: #8ab800;
}
.leftSideWord p{
    line-height: 30px;
    height: 30px;
    font-size: 16px;
}
.Proprice{
    color: #e94925;
}
.joinShoppingCart{
    width: 150px;
    height: 28px;
    line-height: 28px;
    text-align: center;
    background: #8ab800;
    color: #ffffff;
    font-size: 16px;
    margin: 0 auto;
    cursor: pointer;
}